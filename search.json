---
layout: null
sitemap: false
permalink: /search.json
---

[
{%- assign pages = site.pages | where_exp: "p","p.search_exclude != true" -%}
{%- assign posts = site.posts -%}
{%- assign docs = pages | concat: posts -%}
{%- for d in docs -%}
  {%- assign u = d.url | relative_url -%}
  {
    "title": {{ d.title | default: d.name | jsonify }},
    "description": {{ d.description | default: d.excerpt | strip_html | strip_newlines | truncate: 240 | jsonify }},
    "content": {{ d.content | strip_html | strip_newlines | truncate: 1200 | jsonify }},
    "url": {{ u | jsonify }}
  }{%- if forloop.last == false -%},{%- endif -%}
{%- endfor -%}
]
